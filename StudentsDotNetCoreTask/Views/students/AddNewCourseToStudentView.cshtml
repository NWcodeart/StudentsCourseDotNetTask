@model List<CoursesList>


<div id="AddCourseToStudentModal">
    <form asp-action="AddNewCourseToStudent" method="post">

        <select name="courseId" class="custom-select">
            @foreach (var course in Model)
            {
                <option value="@course.CourseId" name="courseId"> @course.CourseName </option>
            }
        </select>

        <p class="text-danger m-3"> @ViewBag.ErrorMassege </p>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" value="@ViewBag.StudentId" name="studentId" class="btn btn-primary">Save changes</button>

    </form>
</div>


